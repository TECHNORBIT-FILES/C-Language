//4)Write a C Program to Find the Number of Elements in an Array. (Using Dynamic Memory Allocation)
#include<stdio.h>
#include<stdlib.h>
void main()
{
	int* p = NULL;
	int i, n, c = 0;
	printf("how many element you want : ");
	scanf_s("%d", &n);
	p = (int*)malloc(n * sizeof(int));
	printf("enter the array element");
	for (i = 0; i < n; i++)
	{
		scanf_s("%d", (p + i));
	}
	for (i = 0; i < n; i++)
	{
		c++;
	}
	printf("%d is element in array", c);
}
