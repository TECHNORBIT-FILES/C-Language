//01) Write a C program to add two matrices in third Matrix(Using Dynamic Memory Allocation).
#include<stdio.h>
#include<stdlib.h>
#include<conio.h>

void main()
{
	int** p = NULL;
	int** q = NULL;
	int** r = NULL;
	int i, j;

	p = (int**)malloc(3 * sizeof(int*)); // vertical array

	for (i = 0; i < 3; i++)
	{
		*(p + i) = (int*)malloc(3 * sizeof(int)); // 3 horizontal array
	}

	printf("Please Enter the  values one by one:\n");
	for (i = 0; i < 3; i++)
	{
		for (j = 0; j < 3; j++)
		{
			scanf_s("%d", *(p + i) + j);
		}
	}
	printf("The first Matrix is as Follows : \n");
	for (i = 0; i < 3; i++)
	{
		for (j = 0; j < 3; j++)
		{
			printf("%d\t", *(*(p + i) + j));
		}
		printf("\n");
	}

	q = (int**)malloc(3 * sizeof(int*)); // vertical array

	for (i = 0; i < 3; i++)
	{
		*(q + i) = (int*)malloc(3 * sizeof(int)); // 3 horizontal array
	}

	printf("Please Enter the values one by one:\n");
	for (i = 0; i < 3; i++)
	{
		for (j = 0; j < 3; j++)
		{
			scanf_s("%d", *(q + i) + j);
		}
	}
	printf("The second Matrix is as Follows : \n");
	for (i = 0; i < 3; i++)
	{
		for (j = 0; j < 3; j++)
		{
			printf("%d\t", *(*(q + i) + j));
		}
		printf("\n");
	}


	//Addition
	r = (int**)malloc(3 * sizeof(int*));                    // vertical array

	for (i = 0; i < 3; i++)
	{
		*(r + i) = (int*)malloc(3 * sizeof(int));            // 3 horizontal array
	}

	for (i = 0; i < 3; i++)
	{
		for (j = 0; j < 3; j++)
		{
			*(*(r + i) + j) = *(*(p + i) + j) + *(*(q + i) + j);
		}
	}

	printf("The addition of the Above two matrix is :\n");
	for (i = 0; i < 3; i++)
	{
		for (j = 0; j < 3; j++)
		{
			printf("%d\t", *(*(r + i) + j));
		}
		printf("\n");
	}
	free(p);	
}

