//15. Write a C program to create an array of n elements using static memory  allocation to print all Armstrong numbers from given array. 
#include<stdio.h>
void main()
{
    int n,arr[100],i,ans=1,sum=0,rem,j,count=0;

    printf("Enter no of elements:\n");
    scanf("%d",&n);

    printf("Enter value of element:\n");
    for(i=0;i<n;i++)
    {
        scanf("%d",&arr[i]);
    }
    for(i=0;i<n;i++)
    {
        j=arr[i];
        sum=0;
        while(j>0)
        {
            rem=j%10;
            sum=sum+(rem*rem*rem);
            j=j/10;
        }
        if(sum==arr[i])
        {
              printf("\n%d is a armstrong number",arr[i]);
        }
    }
}

