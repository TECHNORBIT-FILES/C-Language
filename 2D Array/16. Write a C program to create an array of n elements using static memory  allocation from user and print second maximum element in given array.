//16. Write a C program to create an array of n elements using static memory  allocation from user and print second maximum element in given array. 
#include <stdio.h>
void main() 
{
    int n, i, arr[100], max = 0, max2 = 0;

    printf("Enter how many elements:\n");
    scanf("%d", &n);

    printf("Enter value of elements:\n");
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
    max = arr[0];
    for (i = 1; i < n; i++) 
    {
        if (max < arr[i]) 
        {
            max2 = max;
          max = arr[i];
        } 
       else if (max2 < arr[i] && max != arr[i]) 
        {
            max2 = arr[i];
        }
    }
    printf("first maximum element of an array is:%d\n", 	max);
    printf("second maximum element of an array is:%d\n", 	max2);
}

