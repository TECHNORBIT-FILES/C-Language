//14. Write a C program to create an array of n elements using static memory  allocation to insert new value in the array (sorted list).
#include<stdio.h>
void main()
{
    int n,arr[100],i,m;

    printf("Enter no of elements:\n");
    scanf("%d",&n);
    printf("Enter value of elements:\n");
    for(i=0;i<n;i++)
    {
        scanf("%d",&arr[i]);
    }
    printf("enter value to be inserted:\n");
    scanf("%d",&m);
    for(i=n;i>=0;i--)
    {
        if(arr[i-1]>m)
        {
          arr[i]=arr[i-1];
        }
    else
    {
        break;
    }
    }
    arr[i]=m;
    printf("New Array:\n");
    for(i=0;i<n;i++)
    {
        printf("%d\t",arr[i]);
    }
}

